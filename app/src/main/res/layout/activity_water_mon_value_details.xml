<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WaterMonValueDetailsActivity"
    android:orientation="vertical"
    android:background="@color/dashboard_background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/x_large_view_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_layout"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_back_btn">
                <ImageView
                    android:layout_width="@dimen/activity_profile_margin"
                    android:layout_height="@dimen/activity_profile_margin"
                    android:src="@drawable/back"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_back_btn"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/view_margin"/>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end|center"
                android:id="@+id/cv_year"
                android:layout_marginTop="@dimen/view_margin"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:elevation="@dimen/margin_two"
                app:cardElevation="10dp"
                tools:targetApi="lollipop"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_five"
                    android:layout_marginTop="@dimen/margin_five"
                    android:layout_marginRight="@dimen/margin_five"
                    android:layout_marginBottom="@dimen/margin_five"
                    android:background="@drawable/button_background_whi"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_margin"
                    android:paddingRight="@dimen/view_margin"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/activity_textSize_large" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcv_months"
        android:layout_marginTop="@dimen/margin_five"
        android:layout_marginBottom="@dimen/margin_five"
        android:background="@color/white"
        android:padding="@dimen/margin_two"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_main">
        <devs.mulham.horizontalcalendar.HorizontalCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:textColorSelected="@color/colorPrimary"
            app:selectedDateBackground="@color/text_color_dark"
            app:selectorColor="@color/white"
            app:textColorNormal="@color/dark_gray_op"
            android:clipToPadding="false" />
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:visibility="gone"
        android:id="@+id/grid_channel_total_value"
        android:horizontalSpacing="@dimen/margin_five"
        android:verticalSpacing="@dimen/margin_five"
        android:layout_marginTop="@dimen/margin_two"
        android:layout_marginLeft="@dimen/margin_two"
        android:layout_marginRight="@dimen/margin_two"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_five"
        android:layout_marginLeft="@dimen/margin_three"
        android:layout_marginRight="@dimen/margin_three"
        android:gravity="center"
        android:visibility="gone">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="@dimen/margin_two"
            app:cardElevation="@dimen/margin_three"
            android:layout_margin="@dimen/margin_five">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_manjeera_water"
                android:background="@color/text_color_dark">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/ll_manjeera_txt"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_manjeera_txt"
                        android:textColor="@color/text_color_dark"
                        android:paddingLeft="@dimen/margin_two"
                        android:paddingRight="@dimen/margin_two"
                        android:textAlignment="textStart"
                        android:gravity="center|start"
                        android:textSize="@dimen/activity_textSize_small_16"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:id="@+id/tv_manjeera_value"
                    android:layout_weight="0.4"
                    android:textSize="@dimen/activity_textSize_extra_small"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="@dimen/margin_two"
            app:cardElevation="@dimen/margin_three"
            android:layout_margin="@dimen/margin_five">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_ground_water"
                android:background="@color/text_color_dark"
                android:layout_marginLeft="@dimen/margin_two"
                android:layout_marginRight="@dimen/margin_two"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/ll_ground_txt"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color_dark"
                        android:id="@+id/tv_ground_txt"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/activity_textSize_small_16"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ground_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="@color/text_color_dark"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_textSize_extra_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_five"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/received_at"
            android:paddingRight="@dimen/view_margin"
            android:paddingLeft="@dimen/view_margin"
            android:gravity="center"
            android:layout_margin="@dimen/margin_five"
            android:textSize="@dimen/activity_textSize_small"
            android:textColor="@color/white"
            android:id="@+id/tv_receive_date"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="@string/manjeera_water_flow"
            android:paddingRight="@dimen/view_margin"
            android:paddingLeft="@dimen/view_margin"
            android:gravity="center"
            android:layout_margin="@dimen/margin_five"
            android:textSize="@dimen/activity_textSize_small"
            android:textColor="@color/white"
            android:id="@+id/tv_manjeera"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="@string/ground_water_flow"
            android:paddingRight="@dimen/view_margin"
            android:paddingLeft="@dimen/view_margin"
            android:gravity="center"
            android:layout_margin="@dimen/margin_five"
            android:textSize="@dimen/activity_textSize_small"
            android:textColor="@color/white"
            android:id="@+id/tv_ground"
            android:visibility="gone"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_data"
        android:visibility="gone"
        android:smoothScrollbar="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/ll_data_not_found">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/nodata"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:id="@+id/ll_bottom_view">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:id="@+id/ll_minute">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@string/minute_flow"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="@dimen/activity_textSize_small"
               android:paddingTop="@dimen/view_margin"
               android:paddingBottom="@dimen/view_margin"
               android:id="@+id/tv_minute_flow"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_one"
               android:background="@color/white"
               android:id="@+id/view_minute_data"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:id="@+id/ll_hour">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@string/hourly_flow"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="@dimen/activity_textSize_small"
               android:paddingTop="@dimen/view_margin"
               android:paddingBottom="@dimen/view_margin"
               android:id="@+id/tv_hour_flow"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/margin_one"
               android:background="@color/colorPrimary"
               android:id="@+id/view_hour_data"
               />
       </LinearLayout>
    </LinearLayout>

</FrameLayout>