<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.techuva.iot.activity.History_View_Activity"
    android:id="@+id/ll_root_day_view">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_back_btn">
                <ImageView
                    android:layout_width="@dimen/activity_profile_margin"
                    android:layout_height="@dimen/activity_profile_margin"
                    android:src="@drawable/back"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_back_btn"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/view_margin"/>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/view_margin"
        android:baselineAligned="false"
        android:background="@drawable/four_side_border"
        android:gravity="center"
        android:layout_margin="@dimen/margin_five"
        android:layout_below="@+id/toolbar_layout"
        android:id="@+id/ll_day_view">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/ll_select_date"
            android:padding="@dimen/margin_two">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/date_txt"
                android:textSize="@dimen/activity_textSize_small"
                android:layout_weight="1"
                android:id="@+id/tv_to_date"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/down"
                android:layout_weight="0.1"
                android:contentDescription="@string/app_name"
                android:id="@+id/iv_to_date"/>

        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
             android:visibility="gone"
            android:padding="@dimen/margin_two">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="@string/date_txt"
                 android:textSize="@dimen/activity_textSize_small"
                 android:layout_weight="1"
                 android:id="@+id/tv_from_date"/>
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:srcCompat="@drawable/down"
                 android:layout_weight="0.1"
                 android:contentDescription="@string/app_name"
                 android:id="@+id/iv_from_date"/>

         </LinearLayout>
       </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day_view"
        android:id="@+id/hv_list_channels"
        android:visibility="gone">
        <ListView
            android:id="@+id/channel_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day_view"
        android:id="@+id/rcv_channel_names"
        android:orientation="horizontal"
        android:visibility="gone"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabs"
            android:layout_below="@+id/ll_day_view"
            app:tabMinWidth="100dp"
            android:scrollbars="horizontal"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/dark_blue">
<!--
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="jcsnsdjkcnsdjkcd"/>-->
        </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_headings"
        android:layout_below="@+id/tabs">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/date_txt"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/tv_date_heading"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/time_txt"
            android:id="@+id/tv_time_heading"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/value_txt"
            android:padding="@dimen/margin_five"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_value_heading"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view_background"
        android:layout_below="@+id/ll_headings"
        android:id="@+id/view_headings"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_data"
        android:visibility="visible"
        android:layout_below="@+id/view_headings"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/rcv_day_data"
        android:layout_below="@+id/view_headings"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_headings"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/ll_tab_data_not_found">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_not_found"
            android:gravity="center"
            android:id="@+id/tv_data_not_found"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/activity_textSize_small"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_view_margin"
            android:id="@+id/btn_retry"
            android:background="@color/dark_blue"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>