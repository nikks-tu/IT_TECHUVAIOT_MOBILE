<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="@dimen/margin_three"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_manjeera_water"
            android:background="@color/text_color_dark"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:id="@+id/ll_water_txt"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingTop="@dimen/view_margin"
                android:paddingBottom="@dimen/view_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_water_txt"
                    android:textColor="@color/text_color_dark"
                    android:paddingLeft="@dimen/margin_five"
                    android:paddingRight="@dimen/margin_five"
                    android:paddingTop="@dimen/margin_five"
                    android:paddingBottom="@dimen/margin_five"
                    android:textAlignment="textStart"
                    android:gravity="center|start"
                    android:layout_marginLeft="@dimen/margin_five"
                    android:layout_marginRight="@dimen/margin_five"
                    android:textSize="@dimen/activity_textSize_small_16"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:paddingTop="@dimen/view_margin"
                android:paddingBottom="@dimen/view_margin">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/triangle_small"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_two"
                    android:paddingRight="@dimen/margin_two"
                    android:layout_gravity="end"
                    android:id="@+id/tv_water_value"
                    android:textSize="@dimen/activity_textSize_extra_small"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
