<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DataGraphActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_back_btn">
                <ImageView
                    android:layout_width="@dimen/activity_profile_margin"
                    android:layout_height="@dimen/activity_profile_margin"
                    android:src="@drawable/back"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_back_btn"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/view_margin"/>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:visibility="visible"
      android:id="@+id/ll_main">
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/white"/>
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2.5"
          android:orientation="vertical"
          android:id="@+id/ll_first_layout">
          <com.github.mikephil.charting.charts.LineChart
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:id="@+id/chart_dailyData"
              android:layout_marginTop="@dimen/margin_five"
              android:layout_marginBottom="@dimen/margin_five"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/app_name"
              android:gravity="end"
              android:layout_marginLeft="@dimen/view_margin"
              android:layout_marginRight="@dimen/view_margin"
              android:textColor="@color/white"
              android:id="@+id/tv_unit_measure"/>

      </FrameLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_gravity="bottom"
          android:id="@+id/ll_bottom_layout">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:orientation="vertical"
              android:id="@+id/ll_bar"
              android:visibility="gone"
              android:layout_weight="1"
              android:paddingBottom="@dimen/margin_one"
              android:paddingTop="@dimen/margin_one">
              <com.appyvet.materialrangebar.RangeBar
                  android:layout_marginLeft="@dimen/margin_five"
                  android:layout_marginRight="@dimen/margin_five"
                  android:paddingLeft="@dimen/margin_five"
                  android:paddingRight="@dimen/margin_five"
                  android:id="@+id/rangebar_final"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:mrb_rangeBar="true"
                  app:mrb_pinMaxFont="15sp"
                  app:mrb_pinMinFont="15sp"
                  app:mrb_rangeBarPaddingBottom="20dp"
                  app:mrb_selectorBoundaryColor="@color/dark_gray"
                  app:mrb_selectorBoundarySize="0dp"
                  app:mrb_pinTextColor="@color/colorPrimary"
                  app:mrb_temporaryPins="false"
                  app:mrb_selectorSize="2dp"
                  app:mrb_tickEnd="24"
                  app:mrb_tickInterval="01"
                  app:mrb_tickStart="00"
                  app:mrb_tickColor="@color/white"
                  app:mrb_connectingLineColor="@color/white"
                  app:mrb_pinRadius="14dp"
                  app:mrb_rangeBar_rounded="true"
                  app:mrb_pinColor="@color/white" />

          </LinearLayout>
          <devs.mulham.horizontalcalendar.HorizontalCalendarView
              android:id="@+id/calendarView"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1.2"
              android:background="@color/white"
              android:layout_marginTop="@dimen/margin_five"
              android:layout_gravity="center"
              android:layout_marginBottom="@dimen/margin_five"
              app:colorBottomTextSelected="@color/white"
              app:colorTopTextSelected="@color/white"
              app:textColorSelected="@color/colorPrimary"
              app:textColorNormal="@color/text_color_table"
              />
          <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_marginTop="@dimen/margin_five"
              android:layout_weight="1"
              android:layout_gravity="center"
              android:gravity="center"
              android:visibility="gone"
              android:paddingTop="@dimen/margin_five"
              android:paddingBottom="@dimen/margin_five"
              android:id="@+id/rcv_channel_select"/>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="0.5"
              android:orientation="horizontal"
              android:id="@+id/ll_selected_channel"
              android:background="@color/white"
              android:layout_margin="@dimen/margin_five">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="Select Channel Number"
                  android:gravity="center"
                  android:textSize="@dimen/activity_textSize_small"
                  android:textColor="@color/colorPrimary"
                  android:id="@+id/tv_selected_channel"/>
          </androidx.cardview.widget.CardView>
      </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_data_not_found"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/data_not_found"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>