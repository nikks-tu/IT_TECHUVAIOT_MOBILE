<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_drawer"
    app:theme="@style/MyMaterialTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimary">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_back_AB"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:src="@drawable/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_textSize_large"
        android:id="@+id/page_heading"
        android:text="@string/app_name"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right|center"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_filter"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:textColor="@color/white"
        android:padding="@dimen/margin_five"
        android:layout_marginRight="@dimen/margin_five"
        android:textSize="@dimen/activity_textSize_small_16"
        android:visibility="gone"
        android:id="@+id/tv_history_btn"/>
</LinearLayout>
</androidx.appcompat.widget.Toolbar>
