<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UserRegisterActivity">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_signup"
        android:visibility="visible">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/small_image_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_five"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five">
                    <EditText
                        android:id="@+id/edt_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_five"
                        android:layout_weight="1"
                        android:autofillHints=""
                        tools:targetApi="o"
                        android:inputType="text"
                        android:hint="@string/first_name"
                        android:textSize="@dimen/activity_textSize_small"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five">

                    <EditText
                        android:id="@+id/edt_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_five"
                        android:layout_weight="1"
                        android:autofillHints=""
                        tools:targetApi="o"
                        android:hint="@string/last_name"
                        android:textSize="@dimen/activity_textSize_small"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five">

                    <EditText
                        android:id="@+id/edt_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_five"
                        android:layout_weight="1"
                        android:autofillHints=""
                        tools:targetApi="o"
                        android:hint="@string/contact"
                        android:textSize="@dimen/activity_textSize_small"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five">
                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_five"
                        android:layout_weight="1"
                        android:autofillHints=""
                        tools:targetApi="o"
                        android:hint="@string/email_id"
                        android:textSize="@dimen/activity_textSize_small"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five">
                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_five"
                        android:layout_weight="1"
                        android:autofillHints=""
                        tools:targetApi="o"
                        android:hint="@string/email_id"
                        android:textSize="@dimen/activity_textSize_small"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five">
                    <EditText
                        android:id="@+id/edt_conf_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_five"
                        android:layout_weight="1"
                        android:autofillHints=""
                        tools:targetApi="o"
                        android:hint="@string/email_id"
                        android:textSize="@dimen/activity_textSize_small"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_five">
                    <EditText
                        android:inputType="text"
                        android:id="@+id/edt_address1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_five"
                        android:layout_weight="1"
                        android:hint="S"
                        android:minLines="4"
                        android:autofillHints=""
                        tools:targetApi="o"
                        android:textSize="@dimen/activity_textSize_small" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="@dimen/view_margin"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/view_margin"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginBottom="@dimen/view_margin"
            android:id="@+id/ll_sign_up">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_textSize_small"
                android:id="@+id/tv_signup"
                />
        </LinearLayout>
    </FrameLayout>
