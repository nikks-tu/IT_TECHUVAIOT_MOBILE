<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForewarninActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/toolbar_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_back_btn">
                <ImageView
                    android:layout_width="@dimen/activity_profile_margin"
                    android:layout_height="@dimen/activity_profile_margin"
                    android:src="@drawable/back"
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_back_btn"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/view_margin"
                    android:layout_marginLeft="@dimen/view_margin"/>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_select_date"
        android:padding="@dimen/margin_two"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/margin_five">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_five"
            android:layout_marginRight="@dimen/margin_five">
            <ImageView
                android:layout_width="@dimen/view_margin_medium"
                android:layout_height="@dimen/view_margin_medium"
                app:srcCompat="@drawable/to_date"
                android:contentDescription="@string/app_name"
                android:id="@+id/iv_to_date"
                android:layout_gravity="center"
                android:tint="@color/dark_gray"
                android:layout_margin="@dimen/margin_five"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_txt"
                android:textSize="@dimen/activity_textSize_small"
                android:textColor="@color/dark_gray"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_to_date"
                android:layout_margin="@dimen/margin_five"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_one"
            android:background="@color/dark_gray"/>


    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcv_channel_data"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_five"
        android:layout_marginLeft="@dimen/margin_five"
        android:layout_marginRight="@dimen/margin_five"
        android:layout_marginBottom="@dimen/margin_three"
        android:numColumns="2"
        android:horizontalSpacing="@dimen/margin_five"
        android:verticalSpacing="@dimen/margin_five"
        android:paddingBottom="@dimen/margin_two"
        android:gravity="center"
        android:scrollbars="none"
        android:padding="@dimen/margin_five" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_main_values">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/grid_height"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/margin_five"
                android:id="@+id/cv_fw_item_1"
                android:gravity="center"
                android:elevation="@dimen/margin_two"
                app:cardCornerRadius="@dimen/margin_five"
                android:layout_margin="@dimen/view_margin"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/ll_fw_item_1"
                    android:background="@color/white"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/time_txt"
                        android:padding="@dimen/view_margin"
                        android:layout_weight="0.8"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/activity_navigation_large"
                        android:id="@+id/tv_channel_data_one"
                        tools:targetApi="jelly_bean" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_one"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:layout_margin="@dimen/margin_five"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_channel_name_one"
                        tools:targetApi="jelly_bean" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/grid_height"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/margin_five"
                android:id="@+id/cv_fw_item_2"
                android:gravity="center"
                android:elevation="@dimen/margin_two"
                app:cardCornerRadius="@dimen/margin_five"
                android:layout_margin="@dimen/view_margin"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/ll_fw_item_2"
                    android:background="@color/white"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/time_txt"
                        android:padding="@dimen/view_margin"
                        android:layout_weight="0.8"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/activity_navigation_large"
                        android:id="@+id/tv_channel_data_two"
                        tools:targetApi="jelly_bean" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_one"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:layout_margin="@dimen/margin_five"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_channel_name_two"
                        tools:targetApi="jelly_bean" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/grid_height"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/margin_five"
                android:id="@+id/cv_fw_item_3"
                android:gravity="center"
                android:elevation="@dimen/margin_two"
                app:cardCornerRadius="@dimen/margin_five"
                android:layout_margin="@dimen/view_margin"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/ll_fw_item_3"
                    android:background="@color/white"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/time_txt"
                        android:padding="@dimen/view_margin"
                        android:layout_weight="0.8"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/activity_navigation_large"
                        android:id="@+id/tv_channel_data_three"
                        tools:targetApi="jelly_bean" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_one"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:layout_margin="@dimen/margin_five"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_channel_name_three"
                        tools:targetApi="jelly_bean" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/grid_height"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/margin_five"
                android:id="@+id/cv_item_leafwetness"
                android:visibility="invisible"
                android:gravity="center"
                android:elevation="@dimen/margin_two"
                app:cardCornerRadius="@dimen/margin_five"
                android:layout_margin="@dimen/view_margin"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/ll_leafwetness"
                    android:background="@color/bug_green"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/time_txt"
                        android:padding="@dimen/view_margin"
                        android:layout_weight="0.8"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/activity_navigation_large"
                        android:id="@+id/tv_channel_data_lw"
                        tools:targetApi="jelly_bean" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_one"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:layout_margin="@dimen/margin_five"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_channel_name_lw"
                        tools:targetApi="jelly_bean" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/nodata"
        android:gravity="center"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/activity_textSize_small_16"
        android:id="@+id/tv_nodata"
        android:visibility="gone"
        />

</LinearLayout>