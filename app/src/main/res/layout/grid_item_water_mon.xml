<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="@dimen/margin_five"
    android:gravity="center"
    android:elevation="@dimen/margin_two"
    android:layout_margin="@dimen/view_margin"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:paddingTop="@dimen/margin_five"
            android:paddingBottom="@dimen/margin_five">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_date"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="@dimen/margin_five"
                android:paddingTop="@dimen/margin_two"
                android:paddingBottom="@dimen/margin_two">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_textSize_x_large"
                    android:padding="@dimen/margin_two"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_month"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_textSize_small_16"
                    android:padding="@dimen/margin_two"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/view_margin"
                android:layout_height="@dimen/small_image_view"
                app:srcCompat="@drawable/triangle"
                android:layout_gravity="center_vertical|end"
                android:tint="@color/white"
                android:rotation="180"
                android:contentDescription="@string/app_name" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:id="@+id/ll_main_bubble">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ll_manjeera"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="@dimen/margin_five"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_manjeera_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_small"
                    android:padding="@dimen/margin_two"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_manjeera_txt"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:padding="@dimen/margin_two"/>

            </LinearLayout>
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:paddingTop="@dimen/margin_five"
                android:paddingBottom="@dimen/margin_five"
                android:layout_marginTop="@dimen/margin_five"
                android:layout_marginBottom="@dimen/margin_five"
                android:id="@+id/view_divider_one"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ll_ground"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="@dimen/margin_five"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ground_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_small"
                    android:padding="@dimen/margin_two"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ground_txt"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:padding="@dimen/margin_two"/>
            </LinearLayout>
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:paddingTop="@dimen/margin_five"
                android:paddingBottom="@dimen/margin_five"
                android:layout_marginTop="@dimen/margin_five"
                android:layout_marginBottom="@dimen/margin_five"
                android:id="@+id/view_divider_two"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ll_other"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="@dimen/margin_five"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_other_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_small"
                    android:padding="@dimen/margin_two"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_other_txt"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:padding="@dimen/margin_two"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
